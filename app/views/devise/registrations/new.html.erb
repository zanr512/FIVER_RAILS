 <% flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert alert-success") %>
			<% end %>
<body class="ozadje">

<div class="modal-open">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="modal modal-small fade in" id="registerModal" tabindex="-1" role="dialog" aria-hidden="true" style="display: block; padding-right: 17px;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title text-center">Register with</h4>
        </div>
        <div class="modal-body">
              <div class="form-group">
                <%= f.label :email %>
  	        	<%= f.email_field :email, autofocus: true, class: "form-control" %>
          	</div>
          	<% if f.object.password_required? %>
          	 <div class="form-group">
          	    <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off" , class: "form-control" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <br/>
               
              </div>
              <div class="form-group">
      	        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
            <% end %>
          	<%= f.submit "Register", class: "btn btn-info btn-fill btn-block" %>
          	<h3 align="center">OR</h3>
          	<button class="btn btn-social btn-simple btn-twitter">
                                <i class="fa fa-twitter"></i> 
                                <%= link_to 'Sign In with Twitter', user_omniauth_authorize_path(:twitter) %>
                            </button>
                            
                            
            <button class="btn btn-social btn-simple btn-facebook">
                                <i class="fa fa-facebook-square"></i>
                                <%= link_to 'Sign In with Facebook', user_omniauth_authorize_path(:facebook) %>
                            </button>
                            
        </div>
        <div class="modal-footer">
              <span class="text-muted">Looking to <%= link_to "Log In", new_session_path(resource_name), class: "text-muted" %> ?</span>
              
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>